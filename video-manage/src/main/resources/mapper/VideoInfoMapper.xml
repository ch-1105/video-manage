<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.videomanage.mapper.VideoInfoMapper">

    <resultMap type="VideoInfo" id="VideoInfoResult">
        <result property="videoId"    column="video_id"    />
        <result property="libraryId"    column="library_id"    />
        <result property="fileName"    column="file_name"    />
        <result property="filePath"    column="file_path"    />
        <result property="thumbnailPath"    column="thumbnail_path"    />
        <result property="fileHash"    column="file_hash"    />
        <result property="duration"    column="duration"    />
        <result property="resolution"    column="resolution"    />
        <result property="fileSize"    column="file_size"    />
        <result property="formatName"    column="format_name"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectVideoInfoVo">
        select video_id, library_id, file_name, file_path, thumbnail_path, file_hash, duration, resolution, file_size, format_name, status, create_by, create_time, update_by, update_time, remark from video_info
    </sql>

    <select id="selectVideoInfoList" parameterType="VideoInfo" resultMap="VideoInfoResult">
        <include refid="selectVideoInfoVo"/>
        <where>
            <if test="libraryId != null ">
                AND library_id = #{libraryId}
            </if>
            <if test="fileName != null  and fileName != ''">
                AND file_name like concat('%', #{fileName}, '%')
            </if>
        </where>
    </select>

    <select id="selectFilePathsByLibraryId" parameterType="Long" resultType="String">
        select file_path from video_info where library_id = #{libraryId}
    </select>

    <insert id="batchInsertVideoInfo" parameterType="java.util.List">
        insert into video_info (library_id, file_name, file_path, file_size, format_name, status, create_by, create_time, remark)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.libraryId},
            #{item.fileName},
            #{item.filePath},
            #{item.fileSize},
            #{item.formatName},
            '0',
            #{item.createBy},
            sysdate(),
            #{item.remark}
            )
        </foreach>
    </insert>

</mapper>
